    status: 'development',
    totalPoints: 320,
    githubStars: 12,
    uniqueVisitors: 0,
    uptime: 0,
    githubUrl: 'https://github.com/example/space-defenders',
    user: {
      name: 'Sophie Bernard',
      avatar: null
    }
  }
