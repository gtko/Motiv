const leaderboardEntries = [
  {
    position: 1,
    user: { id: '1', name: 'Marie Dubois', avatar: null },
    totalPoints: 2850,
    projectCount: 5,
    trend: 'up' as const
  },
  {
    position: 2,
    user: { id: '2', name: 'Jean Martin', avatar: null },
    totalPoints: 2340,
    projectCount: 4,
    trend: 'stable' as const
  },
  {
    position: 3,
    user: { id: '3', name: 'Sophie Bernard', avatar: null },
    totalPoints: 1890,
    projectCount: 3,
    trend: 'up' as const
  },
  {
    position: 4,
    user: { id: '4', name: 'Thomas Petit', avatar: null },
    totalPoints: 1560,
    projectCount: 2,
    trend: 'down' as const
  },
  {
    position: 5,
    user: { id: '5', name: 'Emma Rousseau', avatar: null },
    totalPoints: 1230,
    projectCount: 3,
    trend: 'up' as const
