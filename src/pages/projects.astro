const categories = [
  { value: 'all', label: 'Tous les projets' },
  { value: 'saas', label: 'SaaS' },
  { value: 'tool', label: 'Outils' },
  { value: 'game', label: 'Jeux' },
  { value: 'mobile', label: 'Mobile' },
  { value: 'opensource', label: 'Open Source' },
  { value: 'infrastructure', label: 'Infrastructure' }
];

const sortOptions = [
  { value: 'points', label: 'Plus de points' },
  { value: 'recent', label: 'Plus récents' },
  { value: 'stars', label: 'Plus d\'étoiles' },
  { value: 'visitors', label: 'Plus de visiteurs' }
];

const statusFilters = [
  { value: 'all', label: 'Tous', color: 'gray' },
  { value: 'live', label: 'En production', color: 'green' },
  { value: 'beta', label: 'Beta', color: 'yellow' },
  { value: 'development', label: 'En développement', color: 'blue' }
];
---

<Layout title="Projets">
  <!-- Hero Section - Mission Control Spatiale -->
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
    
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src="/assets/illustrations/centre_control-w1280.png" 
        alt="Centre de contrôle background" 
        class="w-full h-full object-cover"
        loading="eager"
      />
      <!-- Dark overlay for better text contrast -->
      <div class="absolute inset-0 bg-gradient-to-b from-neutral-900/70 via-neutral-800/60 to-neutral-700/50"></div>
    </div>
    
    
    <div class="relative z-10 max-w-6xl mx-auto px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- Contenu du centre de contrôle -->
        <div class="text-center lg:text-left">
          <!-- Titre épique -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-black mb-6 text-transparent bg-clip-text bg-gradient-to-r from-white via-primary-200 to-accent-200 leading-tight">
            Centre de Contrôle
            <br />
            des Missions
          </h1>
          
          <!-- Sous-titre mystique -->
          <p class="text-xl md:text-2xl text-neutral-300 max-w-2xl mx-auto lg:mx-0 leading-relaxed mb-8">
            Surveillance en temps réel de toutes les expéditions entrepreneuriales en cours dans notre galaxie
          </p>
          
          <!-- Stats rapides -->
          <div class="flex gap-6 text-white/90">
            <div>
              <span class="text-3xl font-bold text-white">{projects.length}</span>
              <p class="text-sm text-white/70">Missions actives</p>
            </div>
            <div>
              <span class="text-3xl font-bold text-primary-300">{projects.filter(p => p.status === 'live').length}</span>
              <p class="text-sm text-primary-200/70">En production</p>
            </div>
          </div>
          
        </div>
        
        <!-- Espace pour l'illustration (visible sur desktop) -->
        <div class="hidden lg:block"></div>
        
      </div>
    </div>
  </section>


  <!-- Filters and Projects -->
  <section class="py-16 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Filters Bar -->
      <div class="mb-8 space-y-6">
        <!-- Filtres de Catégories Spatiales -->
        <div class="mb-6">
          <h3 class="text-lg font-bold text-neutral-800 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
            </svg>
            Types de Missions Disponibles
          </h3>
          <div class="flex flex-wrap items-center gap-3">
            {categories.map((category) => (
              <button class={`group flex items-center gap-3 px-6 py-3 rounded-2xl font-bold text-sm whitespace-nowrap transition-all transform hover:scale-105 ${
                category.value === 'all' 
                  ? 'bg-gradient-to-r from-primary-500 to-accent-500 text-white shadow-soft-lg' 
                  : 'bg-white border-2 border-neutral-200 text-neutral-700 hover:border-primary-300 hover:shadow-soft'
              }`}>
                {category.value === 'all' && (
                  <svg class="w-5 h-5 text-current" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                  </svg>
                )}
                {category.value === 'saas' && (
                  <svg class="w-5 h-5 text-current" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
                  </svg>
                )}
                {category.value === 'tool' && (
                  <svg class="w-5 h-5 text-current" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                )}
                {category.value === 'game' && (
                  <svg class="w-5 h-5 text-current" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
                  </svg>
                )}
                {category.value === 'mobile' && (
                  <svg class="w-5 h-5 text-current" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                  </svg>
                )}
                {category.value === 'opensource' && (
                  <svg class="w-5 h-5 text-current" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                )}
                {category.value === 'infrastructure' && (
                  <svg class="w-5 h-5 text-current" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                  </svg>
                )}
                <span>{category.label}</span>
                {category.value === 'all' && <span class="text-xs opacity-80">• {projects.length}</span>}
              </button>
            ))}
          </div>
        </div>
        
        <!-- Sort and Status Filters -->
        <div class="flex flex-wrap items-center gap-4">
          <!-- Sort Dropdown -->
          <select class="px-4 py-2 rounded-lg bg-white border border-neutral-200 text-neutral-800 outline-none">
            {sortOptions.map((option) => (
              <option value={option.value}>{option.label}</option>
            ))}
          </select>
          
          <!-- Status Filters -->
          <div class="flex items-center gap-2">
            {statusFilters.map((status) => (
              <button class={`px-3 py-1 rounded-full text-xs font-medium transition-all ${
                status.value === 'all'
                  ? 'bg-neutral-200 text-neutral-700'
                  : status.color === 'green' ? 'bg-primary-100 text-primary-700 hover:bg-primary-200' :
                    status.color === 'yellow' ? 'bg-accent-100 text-accent-700 hover:bg-accent-200' :
                    'bg-neutral-100 text-neutral-700 hover:bg-neutral-200'
              }`}>
                {status.label}
              </button>
            ))}
          </div>
          
          <!-- Search -->
          <div class="flex-1 max-w-xs">
            <div class="relative">
              <input
                type="text"
                placeholder="Rechercher..."
                class="w-full px-4 py-2 pl-10 rounded-lg bg-white border border-neutral-200 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-all outline-none text-neutral-800 text-sm"
              />
              <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Projects Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <a href={`/projects/${project.id}`} class="block bg-white rounded-2xl overflow-hidden border border-neutral-200 shadow-soft group hover:shadow-soft-lg transition-all cursor-pointer hover:-translate-y-1">
            <!-- Project Header -->
            <div class="p-6 border-b border-neutral-200">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-xl font-bold text-neutral-800 mb-2 group-hover:text-primary-600 transition-colors">
                    {project.title}
                  </h3>
                  <div class="flex items-center gap-2 text-sm">
                    <span class={`px-2 py-0.5 rounded-full text-xs font-medium ${
                      project.status === 'live' ? 'bg-primary-100 text-primary-700' :
                      project.status === 'beta' ? 'bg-accent-100 text-accent-700' :
                      'bg-neutral-100 text-neutral-700'
                    }`}>
                      {project.status === 'live' ? 'En production' :
                       project.status === 'beta' ? 'Beta' :
                       'En développement'}
                    </span>
                    <span class="text-neutral-400">•</span>
                    <span class="text-neutral-600">{project.type}</span>
                  </div>
                </div>
                <div class="text-2xl font-bold text-primary-600">{project.totalPoints}</div>
              </div>
              
              <p class="text-neutral-600 text-sm mb-4 line-clamp-2">
                {project.description}
              </p>
              
              <!-- Tags -->
              <div class="flex flex-wrap gap-2">
                {project.tags.slice(0, 3).map((tag) => (
                  <span class="px-2 py-1 rounded bg-neutral-100 text-xs text-neutral-600">
                    {tag}
                  </span>
                ))}
                {project.tags.length > 3 && (
                  <span class="px-2 py-1 rounded bg-neutral-100 text-xs text-neutral-500">
                    +{project.tags.length - 3}
                  </span>
                )}
              </div>
            </div>
            
            <!-- Project Stats -->
            <div class="p-6 bg-neutral-50">
              <div class="grid grid-cols-3 gap-4 text-center mb-4">
                <div>
                  <div class="flex items-center justify-center gap-1 text-accent-500">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <span class="font-semibold">{project.githubStars}</span>
                  </div>
                  <div class="text-xs text-neutral-600">Stars</div>
                </div>
                <div>
                  <div class="text-primary-600 font-semibold">{project.uniqueVisitors.toLocaleString()}</div>
                  <div class="text-xs text-neutral-600">Visiteurs</div>
                </div>
                <div>
                  <div class="text-primary-500 font-semibold">{project.uptime}%</div>
                  <div class="text-xs text-neutral-600">Uptime</div>
                </div>
              </div>
              
              <!-- User Info -->
              <div class="flex items-center justify-between pt-4 border-t border-neutral-200">
                <div class="flex items-center gap-2">
                  <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center text-sm font-bold text-white">
                    {project.user.name.charAt(0)}
                  </div>
                  <div>
                    <p class="text-sm font-medium text-neutral-800">{project.user.name}</p>
                    <p class="text-xs text-neutral-500">{project.createdAt}</p>
                  </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex gap-2">
                  {project.liveUrl && (
                    <button onclick="event.preventDefault(); event.stopPropagation(); window.open(this.dataset.href, '_blank')" data-href={project.liveUrl} class="p-2 rounded-lg bg-white border border-neutral-200 hover:bg-neutral-50 transition-colors">
                      <svg class="w-4 h-4 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </button>
                  )}
                  {project.githubUrl && (
                    <button onclick="event.preventDefault(); event.stopPropagation(); window.open(this.dataset.href, '_blank')" data-href={project.githubUrl} class="p-2 rounded-lg bg-white border border-neutral-200 hover:bg-neutral-50 transition-colors">
                      <svg class="w-4 h-4 text-neutral-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                      </svg>
                    </button>
                  )}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Load More -->
      <div class="mt-12 text-center">
        <button class="px-8 py-3 rounded-full bg-white border border-neutral-200 text-neutral-700 hover:bg-neutral-50 transition-all shadow-soft">
          Charger plus de projets
        </button>
      </div>
    </div>
  </section>

  <!-- Section CTA - Lancement de Nouvelle Mission -->
  <section class="relative py-20 bg-gradient-to-br from-neutral-50 to-white overflow-hidden">
    
    <div class="relative max-w-6xl mx-auto px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- Contenu texte -->
        <div class="text-center lg:text-left">
          <h2 class="text-4xl md:text-5xl font-black text-neutral-800 mb-6">
            Prêt à lancer votre
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-accent-600">
              propre mission ?
            </span>
          </h2>
          
          <p class="text-xl text-neutral-600 mb-8 max-w-xl">
            Rejoignez des dizaines d'entrepreneurs qui transforment leurs idées en succès tangibles
          </p>
          
          <!-- Liste des avantages -->
          <div class="space-y-4 mb-8">
            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div class="text-left">
                <h3 class="font-semibold text-neutral-800">Publication instantanée</h3>
                <p class="text-sm text-neutral-600">Votre projet visible immédiatement par la communauté</p>
              </div>
            </div>
            
