---
import Navigation from '../components/Navigation.tsx';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Motiv - Plateforme de gamification pour équipes créatives" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Motiv</title>
    
    <!-- Fonts premium -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#0f0f23] text-white font-['Inter'] overflow-x-hidden">
    <!-- Navigation ultra-moderne avec glassmorphism -->
    <Navigation client:load />
    
    <!-- Contenu principal avec padding pour la nav fixe -->
    <main class="pt-24 min-h-screen">
      <slot />
    </main>
    
    <!-- Footer futuriste -->
    <footer class="relative mt-32 border-t border-white/10">
      <!-- Effet de gradient animé en arrière-plan -->
      <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-transparent to-blue-900/20"></div>
      
      <div class="relative max-w-7xl mx-auto px-6 py-16">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
          <!-- À propos -->
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <img src="/assets/logo-motiv.png" alt="Motiv" class="w-10 h-10 rounded-lg" />
              <h3 class="text-xl font-bold gradient-text">Motiv</h3>
            </div>
            <p class="text-gray-400 text-sm leading-relaxed">
              La plateforme de gamification qui transforme vos projets en aventures épiques. 
              Depuis 1995, nous innovons dans le web.
            </p>
            <div class="flex gap-3">
              <a href="#" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="#" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a href="#" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Liens rapides -->
          <div class="space-y-4">
            <h4 class="font-semibold text-lg">Découvrir</h4>
            <ul class="space-y-2">
              <li><a href="/projects" class="text-gray-400 hover:text-white transition-colors text-sm">Explorer les projets</a></li>
              <li><a href="/leaderboard" class="text-gray-400 hover:text-white transition-colors text-sm">Classement global</a></li>
              <li><a href="/badges" class="text-gray-400 hover:text-white transition-colors text-sm">Collection de badges</a></li>
              <li><a href="/events" class="text-gray-400 hover:text-white transition-colors text-sm">Événements</a></li>
            </ul>
          </div>
          
          <!-- Support -->
          <div class="space-y-4">
            <h4 class="font-semibold text-lg">Support</h4>
            <ul class="space-y-2">
              <li><a href="/help" class="text-gray-400 hover:text-white transition-colors text-sm">Centre d'aide</a></li>
              <li><a href="/docs" class="text-gray-400 hover:text-white transition-colors text-sm">Documentation</a></li>
              <li><a href="/api" class="text-gray-400 hover:text-white transition-colors text-sm">API Développeurs</a></li>
              <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors text-sm">Contact</a></li>
            </ul>
          </div>
          
          <!-- Newsletter -->
          <div class="space-y-4">
            <h4 class="font-semibold text-lg">Restez connecté</h4>
            <p class="text-gray-400 text-sm">Recevez les dernières nouvelles et mises à jour.</p>
            <form class="space-y-3">
              <div class="relative">
                <input 
                  type="email" 
                  placeholder="votre@email.com" 
                  class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 focus:border-purple-500 focus:bg-white/10 transition-all outline-none text-sm"
                />
              </div>
              <button type="submit" class="w-full bg-gradient-to-r from-purple-500 to-pink-500 px-4 py-3 rounded-lg font-medium text-sm hover:shadow-lg transform hover:scale-105 transition-all">
                S'abonner
              </button>
            </form>
          </div>
        </div>
        
        <!-- Copyright -->
        <div class="mt-12 pt-8 border-t border-white/10 flex flex-col md:flex-row items-center justify-between">
          <p class="text-gray-400 text-sm">
            © 2025 Motiv. Tous droits réservés. Créé avec passion depuis 1995.
          </p>
          <div class="flex gap-6 mt-4 md:mt-0">
            <a href="/privacy" class="text-gray-400 hover:text-white transition-colors text-sm">Confidentialité</a>
            <a href="/terms" class="text-gray-400 hover:text-white transition-colors text-sm">Conditions</a>
            <a href="/cookies" class="text-gray-400 hover:text-white transition-colors text-sm">Cookies</a>
          </div>
        </div>
      </div>
    </footer>
    
    <!-- Scripts pour les interactions avancées -->
    <script>
      // Effet de hover magnétique
      function setupMagneticHover() {
        document.querySelectorAll('.magnetic-hover').forEach(element => {
          element.addEventListener('mousemove', (e) => {
            const rect = element.getBoundingClientRect();
            const x = e.clientX - rect.left - rect.width / 2;
            const y = e.clientY - rect.top - rect.height / 2;
            
            element.style.transform = `translate(${x * 0.1}px, ${y * 0.1}px)`;
          });
          
          element.addEventListener('mouseleave', () => {
            element.style.transform = 'translate(0, 0)';
          });
        });
      }

      // Effet de scroll smooth pour les ancres
      function setupSmoothScroll() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      }

      // Observer pour détecter les changements DOM
      const observer = new MutationObserver(() => {
        setupMagneticHover();
        setupSmoothScroll();
      });

      observer.observe(document.body, {
        childList: true,
        subtree: true
      });

      // Setup initial
      setupMagneticHover();
      setupSmoothScroll();
    </script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>